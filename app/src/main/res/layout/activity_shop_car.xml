<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/grey"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:fitsSystemWindows="true"
              android:clipToPadding="true">
    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <android.support.v7.widget.RecyclerView
          android:layout_weight="1"
          android:background="@color/white"
          android:id="@+id/shopcar_rv"
          android:layout_width="match_parent"
          android:layout_height="match_parent">
      </android.support.v7.widget.RecyclerView>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/shopcar_allchoose"
            android:layout_marginLeft="15dp"
            android:src="@drawable/no_select"
            android:layout_width="25dp"
            android:layout_height="25dp"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:text="全选"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:layout_width="120dp"
            android:layout_height="match_parent">
            <TextView

                android:id="@+id/shopcar_good_price"
                android:layout_alignParentRight="true"
                android:textColor="@color/textgreencolor"
                android:textSize="20sp"
                android:text="¥0.00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_alignBaseline="@+id/shopcar_good_price"
                android:layout_toLeftOf="@+id/shopcar_good_price"
                android:textSize="16sp"
                android:text="合计："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/textgreycolcr"
                android:layout_below="@+id/shopcar_good_price"
                android:textSize="16sp"
                android:layout_alignParentRight="true"
                android:text="不含运费"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <TextView
            android:clickable="true"
            android:id="@+id/complete_money"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="结算(2)"
            android:background="@drawable/next_step_enable"
            android:layout_width="100dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>
