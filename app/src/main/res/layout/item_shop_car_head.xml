<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/grey"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
        <RelativeLayout
            android:background="#FFF"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:clickable="true"
                android:layout_centerVertical="true"
                android:id="@+id/shop_car_all_select"
                android:src="@drawable/no_select"
                android:layout_width="25dp"
                android:layout_height="25dp"/>

            <TextView
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/shop_car_all_select"
                android:id="@+id/shop_name"
                android:layout_marginLeft="10dp"
                android:textSize="16dp"
                android:text="123456789"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/shop_name"
                android:id="@+id/whether_nearshop"
                android:layout_marginLeft="5dp"
                android:src="@mipmap/ic_launcher"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <ImageView
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/whether_nearshop"
                android:src="@drawable/icon_goto_grey"
                android:layout_width="25dp"
                android:layout_height="15dp"/>

            <TextView
                android:id="@+id/good_edit"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="編輯"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@+id/good_edit"
                android:background="#DEDEDE"
                android:layout_width="1dp"
                android:layout_height="20dp"/>
        </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:background="@color/white"
        android:id="@+id/shopcar_shopgoods"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
